<style>/* Global Styles */

    body {
        margin: 0;
        font-family: Arial, sans-serif;
        background-color: #f4f4f4;
        color: #333;
        overflow-x: hidden;
    }
    
    /* Navbar Styles */
    .nav-bar {
        width: 100%;
        height: 80px;
        display: flex;
        align-items: center;
        justify-content: space-between;
        background-color: white;
        color: black;
        top: 0;
        left: 0;
        z-index: 1000;
        padding: 0 20px;
        box-shadow: 0 4px 8px rgba(0,0,0,0.2);
    }
    
    .logo img {
        height: 60px;
        border-radius: 50%;
    }
    
    .nav-bar .nav-links {
        display: flex;
        flex: 1;
        justify-content: center;
    }
    
    .nav-bar .nav-links a {
        color: white;
        text-decoration: none;
        font-size: 18px;
        padding: 0 15px;
        line-height: 80px;
        transition: color 0.3s ease;
    }
    
    .nav-bar .nav-links a:hover {
        color: #f0f0f0;
    }
    
    .nav-bar .highlight {
        font-size: 24px;
        font-weight: bold;
        cursor: default;
        line-height: 80px;
        transition: color 0.3s ease;
    }
    
    .nav-bar .button-group {
        display: flex;
    }
    
    .button-group .button {
        background-color: #007bff;
        border: none;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        font-size: 16px;
        cursor: pointer;
        margin-left: 10px;
        transition: background-color 0.3s ease;
    }
    
    .button-group .button:hover {
        background-color: #0056b3;
    }
    
    .logout {
        /* background-color: #007bff; */
        border: none;
        color: black;
        padding: 10px 20px;
        border-radius: 2px;
        font-size: 16px;
        cursor: pointer;
        transition: background-color 0.3s ease;
        text-decoration: none;
        border: 2px solid rgb(90, 90, 168) ;
    }
    .logout:hover
    {
        background-color: #9acbff;
        border-radius: 10px;

    }
    /* Image Section */
    .img-sec {
        padding: 0 20px;
    }
    
    .sub-img-sec {
        display: flex;
        flex-wrap: wrap;
        margin-bottom: 20px;
    }
    
    .img-slot {
        flex: 1 1 calc(25% - 20px);
        margin: 10px;
        border: 2px solid #ddd;
        border-radius: 8px;
        overflow: hidden;
        position: relative;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }
    .text3:hover
    {
        cursor: none;
    }
    .img-slot img {
        width: 100%;
        height: auto;
        display: block;
        border-bottom: 2px solid #ddd;
    }
    
    .img-slot span {
        display: block;
        text-align: center;
        padding: 10px;
        background-color: #fff;
        color: #333;
        font-size: 16px;
        border-radius: 0 0 8px 8px;
    }
    
    .img-slot:hover {
        transform: translateY(-5px);
        box-shadow: 0 8px 16px rgba(0, 0, 0, 0.2);
    }
    
    /* Footer Styles */
    footer {
        width: 100%;
        height: 70px;
        background-color: white;
        color: black;
        display: flex;
        justify-content: center;
        align-items: center;
        text-align: center;
        bottom: 0;
        left: 0;
        box-shadow: 0 -4px 8px rgba(0,0,0,0.2);
    }
    
    footer p {
